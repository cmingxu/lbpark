= javascript_include_tag "http://res.wx.qq.com/open/js/jweixin-1.0.0.js" 
= javascript_include_tag "vendor_wechat_config"
= javascript_include_tag "vendor/coupons"

.vendor_coupon_use
  .vendor_coupon_use_icon
    - if @scan_result
      %image{:src => asset_path("coupon_use_success.jpg"), :height => 200, :width => 200 }
    - else
      %image{:src => asset_path("coupon_use_fail.jpg"), :height => 200, :width => 200  }
  .vendor_coupon_use_notice
    .vendor_coupon_use_notice_big
      - if @scan_result
        扫码成功
      - else
        扫码失败
  - if @coupon.present?
    .vendor_coupon_use_info_section
      .vendor_coupon_use_info_section_item
        %span.label 价格(元)
        %span.value= @coupon.price * @coupon.quantity
        .clearfix
      .vendor_coupon_use_info_section_item
        %span.label 类型
        %span.value= @coupon.coupon_tpl.type_name_in_zh
        .clearfix
      .vendor_coupon_use_info_section_item
        %span.label 时段
        %span.value= @coupon.time_span
        .clearfix
      .vendor_coupon_use_info_section_item
        %span.label 名称
        %span.value= "#{@coupon.park.name}（#{@coupon.park.park_type}）"
        .clearfix
      .vendor_coupon_use_info_section_item
        %span.label 地址
        %span.value= @coupon.park.address
        .clearfix
  .vendor_coupon_use_rescan
    %a#scanQRCode
      继续扫一扫
