= hidden_field_tag "coupon_id", @coupon.id, :id => "coupon_id"

.user_coupon_show_page
  .user_nav_bar
    = link_to raw("<span> </span> 返回"), mobile_coupons_path(:owned => true, :anchor => :owned)
  .user_coupon_notice
    请在出口向工作人员展示二维码。
  .user_coupon_qr_code
    .user_coupon_qr_code_bg
      = image_tag @coupon.qr_code.thumb.url

  .user_coupon_show_page_info_section
    .user_coupon_show_page_info_section_item
      %span.label 类型
      %span.value= @coupon.coupon_tpl.type_name_in_zh
      .clearfix
    .user_coupon_show_page_info_section_item
      %span.label 时段
      %span.value= @coupon.park.address
      .clearfix
    - if @coupon.monthly?
      .user_coupon_show_page_info_section_item
        %span.label 车牌照
        %span.value= @coupon.issued_paizhao
        .clearfix
    .user_coupon_show_page_info_section_item
      %span.label 数量
      %span.value= @coupon.quantity
      .clearfix
    .user_coupon_show_page_info_section_item
      %span.label 单价
      %span.value= @coupon.price
      .clearfix

  .user_coupon_btns
    = link_to "规则", rule_mobile_coupons_path, :class => "user_coupon_btn pull-left"
    = link_to "分享", "", :class => "user_coupon_btn pull-right"
    .clearfix

  .blank50
  .blank50



  = javascript_include_tag "mobile_coupon_show"

