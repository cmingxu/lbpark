    .popup.hidden
    #confirm_box.hidden
      #confirm_message
        %span 车场当前状态为 -
        %strong#park_status_word 紧张
      #confirm_buttons
        #confirm_no_button.btn
          %span 取消
        #confirm_yes_button.btn
          %span 确认
