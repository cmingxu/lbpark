.container-fluid
  .row-fluid
    .col-md-10.col-md-offset-1.table_wrapper
      %table.table.table-striped.table-condensed.table-hover.table-bordered
        %thead
          %th
          %th ID
          %th 编号
          %th 名称
          %th 性别
          %th 地区
          %th 关注时间
          %th 渠道

        %tbody
          - @wechat_users.each do |p|
            %tr
              %td
                %image{:src => p.headimg.thumb.url}
              %td= p.id
              %td= p.openid
              %td= p.nickname
              %td= p.sex
              %td
                = p.province
                = p.city
              %td= p.subscribe_time
              %td= p.channel


    = paginate @wechat_users
