.navbar{:role => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse', 'type' => 'button'}
        %span.sr-only   Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => '/'}
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.pull-right
        - if current_user
          %li
            %a{:href => "/dashboard"} 用户后台
          - if current_user.admin?
            %li
              %a{:href => "/admin"} 管理后台
        - else
          %li
            %a{:href => "/register"} 注册
          %li
            %a{:href => "/login"} 登陆


