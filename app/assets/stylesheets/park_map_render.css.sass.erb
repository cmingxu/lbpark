@import "client"

$bg-main-color: white
$font-main-color: black
$bg-gray-color: #f6f6f6
$bg-dark-gray: #cdcdcd
$bg-light-gray: #f5f5f5

#park_maps
  margin-bottom: 10px
  .btn
    margin-left: 15px
  .park_map_in_place_editor
    height: 35px
    line-height: 35px
    width: 80px
    margin-left: 15px
    text-align: center
  .pm_div
    float: left
    margin-bottom: 10px
    position: relative
    .pm_link_div
      width: 100%
      text-align: center
      position: absolute
      display: none
      a
        color: #7fbede
        padding: 10px
    &:hover
      .pm_link_div
        display: block

#container
  width: 100%
  background-color: $bg-gray-color

  .ruler
    height: 20px
    width: 2000px
    background-color: white
    border-bottom: 1px solid $bg-dark-gray
    z-index: 100
    position: static
    .small_interval_mark,.big_interval_mark
      float: left
      border-left: 1px solid $bg-dark-gray
      height: 10px
      width: 10px
    .big_interval_mark
      height: 20px
  #pm_mesh_x_ruler
    margin-left: 20px
  #pm_mesh_y_ruler
    transform: translateX(-100%) rotate(-90deg)
    transform-origin: right top

  .pm_content
  .pm_header
    margin-bottom: 5px
  #pm_toolbar
    height: 64px
    padding: 10px
    border: 1px solid $bg-dark-gray
    #pm_toolbar_content
      .toolbaritem
        float: left
        width: 44px
        text-align: center
        color: $bg-dark-gray
        cursor: pointer
        .toolbaritem_icon
          height: 32px
          width: 32px
          background-image: url('<%= image_path("logo_png.png") %>')
          background-size: 32px 32px
          margin: 0px auto
        .toolbaritem_name
          color: black
        .park_space
          background-image: url('<%= image_path("park_space.png") %>')!important
        .lane
          background-image: url('<%= image_path("lane.png") %>')!important
        .plain
          background-image: url('<%= image_path("plain.png") %>')!important
        .pan
          background-image: url('<%= image_path("pan.png") %>')!important
        .line
          background-image: url('<%= image_path("line.png") %>')!important
        .rect
          background-image: url('<%= image_path("rect.png") %>')!important
        .pillar
          background-image: url('<%= image_path("pillar.png") %>')!important
        .lift
          background-image: url('<%= image_path("lift.png") %>')!important
        .elevator
          background-image: url('<%= image_path("elevator.png") %>')!important
  #pm_content
    width: 100%
    position: relative
    min-height: 600px
    overflow: scroll
  #pm_mesh_wrapper
    box-sizing: border-box
    width: 2500px
    height: 2500px
    overflow: scroll
    border: 1px solid $bg-dark-gray

    #pm_mesh
      width: 100%
      background-color: $bg-main-color
      height: 100%
      position: relative
      top: -20px
      left: 20px
      opacity: 0.7
      div.mesh_line
        overflow: auto
        user-select: none
        span
          width: 10px
          height: 10px
          display: inline-block
          border-right: 1px solid $bg-gray-color
          border-bottom: 1px solid $bg-gray-color
          box-sizing: border-box
          float: left
        .selected
          background-color: red
      .line
        text-align: center
        .handle
          width: 16px
          height: 16px
          position: absolute
          background-color: white
          border: 1px solid gray
          display: none
        .remove_handle
          line-height: 16px
          left: 50%
          top: 10px
        .left_handle
          float: left
          top: -8px
          left: -8px
        .right_handle
          float: right
          right: -8px
          top: -8px
      .rect
        .rect_handle
          position: absolute
        .rect_move_handle
          width: 100%
          height: 100%
          margin: 0px auto
        .rect_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none

        .rect_left_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          top: -8px
          left: -8px
          display: none
        .rect_right_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          bottom: -8px
          right: -8px
          display: none

        .rect_rotate_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          bottom: 50%
          transform: transformY(-50%)
          right: -18px
          display: none
          
      .park_space
        background-image: url('<%= image_path("park_space.png") %>')
        background-size: 30px 50px
        .park_space_handle
          position: absolute
        .park_space_rotate_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          bottom: 50%
          right: -18px
          display: none
        .park_space_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none
        .park_space_move_handle
          width: 100%
          height: 100%
          margin: 0px auto
      .lane
        background-image: url('<%= image_path("lane.png") %>')
        background-repeat: repeat-x
        background-size: 50px auto
        .lane_handle
          position: absolute
        .lane_rotate_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          bottom: 10%
          right: -18px
          display: none
        .lane_right_handle
          background-color: white
          border: 1px solid gray
          width: 16px
          height: 16px
          bottom: 90%
          right: -18px
          display: none
        .lane_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none
        .lane_move_handle
          width: 100%
          height: 100%
          margin: 0px auto
      .lane_double
        background-image: url('<%= image_path("lane/lane_double.png") %>')!important
      .lane_left
        background-image: url('<%= image_path("lane/lane_left.png") %>')!important
      .lane_right
        background-image: url('<%= image_path("lane/lane_right.png") %>')!important
      .lane_left_top
        background-image: url('<%= image_path("lane/lane_left_top.png") %>')!important
      .lane_left_bottom
        background-image: url('<%= image_path("lane/lane_left_bottom.png") %>')!important
      .lane_right_top
        background-image: url('<%= image_path("lane/lane_right_top.png") %>')!important
      .lane_right_bottom
        background-image: url('<%= image_path("lane/lane_right_bottom.png") %>')!important

      .pillar
        background-size: 20px 20px
        .pillar_handle
          position: absolute
        .pillar_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none
        .pillar_move_handle
          width: 100%
          height: 100%
          margin: 0px auto

      .lift
        background-image: url('<%= image_path("lift.png") %>')
        background-size: 50px 50px
        .lift_handle
          position: absolute
        .lift_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none
        .lift_move_handle
          width: 100%
          height: 100%
          margin: 0px auto
      .elevator
        background-image: url('<%= image_path("elevator.png") %>')
        background-size: 50px 50px
        .elevator_handle
          position: absolute
        .elevator_remove_handle
          text-align: center
          width: 16px
          height: 16px
          bottom: -18px
          left: 50%
          transform: translateX(-50%)
          background-color: white
          border: 1px solid gray
          display: none
        .elevator_move_handle
          width: 100%
          height: 100%
          margin: 0px auto




  #pm_ele_editor
    width: 200px
    position: absolute
    top: 20px
    right: 0px
    border: 1px solid $bg-dark-gray
    height: 600px
    z-index: 10
    background-color: white
    display: none
    #pm_ele_editor_header
      text-align: center
      height: 30px
      border-bottom: 1px solid $bg-gray-color
    #pm_ele_editor_content
      height: 100%
      background-color: $bg-light-gray
      table
        td
          width: 50%
          text-align: left
          padding: 5px
          input,select
            width: 100%

