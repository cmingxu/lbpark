body
  margin: 0px
  width: 100%
  height: 100%
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

#map
  width: 100%
  height: 1000px
  .lb_marker
    background-image: url('park_water_drop.png')
    background-repeat: repeat-x
    height: 48px
    width: 32px
  .marker_orange
    background-position-x: 0px
  .marker_red
    background-position-x: 32px
  .marker_blue
    background-position-x: 65px
  .marker_green
    background-position-x: 98px

#park
  #park_title
    width: 100%
    background-color: white
    position: fixed
    z-index: 10000
    border-top: 1px solid black
    border-bottom: 1px solid black
    span.desc
      float: left
    span.nav_button
      width: 64px
      border-left: 1px solid black
      float: right
      display: block
      line-height: 64px
  #park_detail
    width: 100%
    background-color: white
    border-top: 1px solid black
    border-bottom: 1px solid black
    z-index: 10000
    position: fixed


#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  background-color: #4d88e6
  a
    width: 33.3%
    height: 50px
    line-height: 50px
    width: 33.3%
    display: block
    float: left
    font-size: 12px
    text-decoration: none
    color: white
    span
      width: 48px
      height: 100%
      display: block
      margin: 0px auto
      background-image: url(<%= asset_path('tab_icons.png')%>)
      background-repeat: no-repeat
      text-align: center
      padding-top: 16px
    span.map
      background-position-x: 0px
    span.search
      background-position-x: -48px
    span.mine
      background-position-x: -96px
    span.map_press
      background-position-x: 0px
      opacity: 0.48
    span.search_press
      opacity: 0.48
      background-position-x: -48px
    span.mine_press
      background-position-x: -96px
      opacity: 0.48



#autocomplete
  padding: 10px 10px 0px 10px
  #search_place
    padding: 5px 10px 5px 10px
    border: 1px solid gray
    border-radius: 2px
    position: relative
    #search_input
      font-size: 1.4em
      width: 100%
      border: none
      outline: none
  #autocomplete_list
    padding: 5px 10px 5px 10px
    list-style: none
    padding: 0px
    width: 100%
    margin: 0px
    border-bottom: 1px solid gray
    li
      font-size: 1.4em
      border-left: 1px solid gray
      border-right: 1px solid gray
      border-top: 1px solid gray
      padding: 5px 10px 5px 10px
      &:hover
        background-color: gray
      &.autocomplete_item_last
        border-bottom: 1px solid gray
      a
        text-decoration: none
        color: black
        width: 100%
        height: 100%
        display: block
        span
          font-size: 16px
          font-style: italic
      &:first-child
        border-top: none
