      float: left
      padding-left: $park_padding_left
      margin-top: 10px
      display: table-cell
      #park_status
        background-color: green
        color: white
        font-size: 12px
        display: inline-block
        padding: 12px
        padding-bottom: 2px
        padding-top: 2px
        position: absolute
        transform: translate(-26px, -14px) rotate(-45deg)
      #park_name
        font-size: $font-size-normal
      #park_short_description
        font-size: $font-size-small
        margin-top: 6px
        display: inline-block
      #park_position
        font-size: $font-size-small
        background-color: $light-gray
        color: white
        border-radius: 1px
        padding: 1px
        padding-bottom: 0px
    span.nav_button
      width: 64px
      height: 64px
      border-left: 1px solid $border-color
      float: right
      text-align: center
      .nav_button_icon
        background-image: url('<%= asset_path("user_index.png") %>')
        background-repeat: no-repeat
        background-size: 600px auto
        background-position: 0px
        height: 50px
        width: 50px
        margin-left: 6px
      .nav_button_text
        font-size: $font-size-small
        color: $blue
        margin-top: -15px

  #park_detail
    width: 100%
    background-color: white
    border-top: 1px solid $border-color
    border-bottom: 1px solid $border-color
    z-index: 100000
    position: fixed
    .row
      box-sizing: border-box
      border-top: 1px solid $border-color
      &:first-child
        height: 112px
        border-top: none
        .park_preview
          position: fixed
          right: 0px
          bottom: 207px

        .day_and_night_prices
          margin-right: 177px
          .day
            height: 54px
            border-left: $border-highlight-width solid $border-highlight-color-2
          .night
            height: 54px
            border-top: 1px solid $border-color
            border-left: $border-highlight-width solid $border-highlight-color-3
          img
            width: 35%
            height: 55px
            float: left
          .price_detail
            float: right
            height: 55px
            width: 65%
            .price_and_unit
              padding-top: 10px
              color: $blue
              .price
                font-size: $font-size-small
              .unit
                font-size: $font-size-small
            .time_span
              font-size: $font-size-extra-small
          span.day_icon
            float: left
            height: 50px
            width: 50px
            background-image: url(<%= asset_path("user_index.png") %>)
            background-size: 600px
            background-position-x: -50px
            background-repeat: no-repeat
            display: block
          span.night_icon
            float: left
            height: 50px
            width: 50px
            background-image: url(<%= asset_path("user_index.png") %>)
            background-size: 600px auto
            background-position-x: -100px
            background-repeat: no-repeat
            display: block
      &:nth-child(2)
        height: 55px
        padding-left: 10px
        word-wrap: break-word
        word-break: normal
        border-left: $border-highlight-width solid $border-highlight-color-4
      &:nth-child(3)
        height: 55px
        border-left: $border-highlight-width solid $border-highlight-color-5
      &:nth-child(4)
        height: 50px
        line-height: 50px
      span.feature
        border: 1px solid $border-color
        padding: 2px 3px
        font-size: .8em
        display: inline-block
        @include block_vertical_align
      &#coupon_tags
        padding-left: $park_padding_left
        .coupon_tag
          border: 1px solid $border-color
          color: $border-color
          padding: 2px 3px
          font-size: .8em
          display: inline-block
          @include block_vertical_align
        .coupon_tag_active
          position: relative
          text-decoration: none
          &:after
            position: absolute
            content: ''
            width: 5px
            height: 5px
            border-radius: 50%
            background-color: red
            top: -3px
            box-shadow: 1px 1px 1px rgba(black, 0.5)
        .coupon_tag_active_today
          color: $user_coupon_free_item_highlight_color
          border-color: $user_coupon_free_item_highlight_color
        .coupon_tag_active_tomorrow
          color: $user_coupon_free_item_highlight_color
          border-color: $user_coupon_free_item_highlight_color
        .coupon_tag_active_monthly
          color: $user_coupon_long_term_item_highlight_color
          border-color: $user_coupon_long_term_item_highlight_color
        .coupon_tag_active_quarterly
          color: $user_coupon_long_term_item_highlight_color
          border-color: $user_coupon_long_term_item_highlight_color

      .lb_notice
        height: 55px
        width: 50px
        float: left
        text-align: right
        background-image: url('<%= asset_path("user_index.png") %>')
        background-size: 600px auto
        background-position-x: -200px
        background-repeat: no-repeat
      #tips
        font-size: $font-size-small
        float: left

