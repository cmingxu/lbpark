$border-color: #666
$border-highlight-color-1: #f88db9
$border-highlight-color-2: #72bbe8
$border-highlight-color-3: #f8b064
$border-highlight-color-4: #71d398
$border-highlight-color-5: #ff7a7b
$border-highlight-width: 3px


body
  margin: 0px
  width: 100%
  height: 100%
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

#map
  width: 100%
  height: 1000px
  .lb_marker
    background-image: url('<%= image_path("park_water_drop.png") %>')
    background-repeat: repeat-x
    height: 48px
    width: 32px
    color: white
    padding-top: 10px
    font-size: 20px
    text-align: center
    position: relative
    .rmb_mark
      position: fixed
      font-size: 10px
      left: 2px
      top: 5px
  .lb_marker_a
  .lb_marker_b
  .lb_marker_c
  .marker_orange
    background-position-x: 0px
  .marker_green
    background-position-x: -64px
  .marker_blue
    background-position-x: -128px
  .marker_red
    background-position-x: -192px
  .marker_b
    background-position-x: -320px
  .marker_c
    background-position-x: -384px
    
  #center_marker
    width: 50px
    height: 50px
    margin-left: -25px
    margin-top: -25px
    background-image: url('<%= image_path("day_and_night.png") %>')
    background-position-x: -200px

#park
  #park_title
    transition: height 2s
    -webkit-transition: all 0.2s
  #park_detail
    transition: height 2s
    -webkit-transition: all 0.2s

  #park_title
    width: 100%
    background-color: white
    position: fixed
    z-index: 10000
    border-top: 1px solid $border-color
    border-bottom: 1px solid $border-color
    border-left: $border-highlight-width solid $border-highlight-color-1
    span.desc
      float: left
      padding-top: 14px
      padding-left: 10px
      #park_name
        font-size: 18px
        font-weight: bold
      #park_short_description
        font-size: 12px
      #park_status
        font-size: 10px
        background-color: green
        color: white
        padding: 2px
        border-radius: 2px
    span.nav_button
      width: 64px
      height: 64px
      border-left: 1px solid $border-color
      float: right
      text-align: center
      .nav_button_icon
        background-image: url('<%= image_path("day_and_night.png") %>')
        background-repeat: no-repeat
        background-position: 0px
        height: 50px
        width: 50px
        margin-left: 8px
      .nav_button_text
        font-size: 12px
        color: #7d9df9
        margin-top: -14px

  #park_detail
    width: 100%
    background-color: white
    border-top: 1px solid $border-color
    border-bottom: 1px solid $border-color
    z-index: 10000
    position: fixed
    .row
      height: 100px
      border-top: 1px solid $border-color
      &:first-child
        border-top: none
        .park_preview
          position: fixed
          right: 0px
          bottom: 247px

        .day_and_night_prices
          margin-right: 133px
          .day
            height: 50px
            border-left: $border-highlight-width solid $border-highlight-color-2
          .night
            background-color: #f0f8f1
            height: 50px
            border-left: $border-highlight-width solid $border-highlight-color-3
          img
            width: 35%
            height: 50px
            float: left
          .price_detail
            float: right
            height: 50px
            width: 65%
            .price_and_unit
              padding-top: 10px
              color: blue
              .price
                font-size: 14px
              .unit
                font-size: 10px
            .time_span
              font-size: 10px
          span.day_icon
            float: left
            height: 50px
            width: 50px
            background-image: url(<%= image_path("day_and_night.png") %>)
            background-position-x: -50px
            background-repeat: no-repeat
            display: block
          span.night_icon
            float: left
            height: 50px
            width: 50px
            background-image: url(<%= image_path("day_and_night.png") %>)
            background-position-x: -100px
            background-repeat: no-repeat
            display: block
      &:nth-child(2)
        padding-top: 10px
        padding-left: 10px
        word-wrap: break-word
        word-break: normal
        border-left: $border-highlight-width solid $border-highlight-color-4
      &:nth-child(3)
        padding-top: 10px
        padding-left: 10px
        background-color: #f0f8f1
        border-left: $border-highlight-width solid $border-highlight-color-5
      span.feature
        border: 1px solid gray
        padding: 5px
        margin-right: 10px
        margin-top: 10px
        font-size: 12px
        display: inline-block
      .lb_notice
        height: 50px
        width: 50px
        float: left
        text-align: right
        background-image: url('<%= asset_path("day_and_night.png") %>')
        background-position-x: -150px
        background-repeat: no-repeat
      #tips
        font-size: 12px
        float: right
        width: 65%

#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  background-color: #4d88e6
  a
    width: 33.3%
    height: 50px
    line-height: 50px
    width: 33.3%
    display: block
    float: left
    font-size: 12px
    text-decoration: none
    color: white
    span
      width: 48px
      height: 100%
      display: block
      margin: 0px auto
      background-image: url(<%= image_path('tab_icons.png')%>)
      background-repeat: no-repeat
      text-align: center
      padding-top: 16px
    span.map
      background-position-x: 0px
    span.search
      background-position-x: -48px
    span.mine
      background-position-x: -96px
    span.map_press
      background-position-x: 0px
      opacity: 0.48
    span.search_press
      opacity: 0.48
      background-position-x: -48px
    span.mine_press
      background-position-x: -96px
      opacity: 0.48



#autocomplete
  padding: 10px 10px 0px 10px
  #search_place
    padding: 5px 10px 5px 10px
    border: 1px solid gray
    border-radius: 2px
    position: relative
    #search_input
      font-size: 1.4em
      width: 100%
      border: none
      outline: none
  #autocomplete_list
    padding: 5px 10px 5px 10px
    list-style: none
    padding: 0px
    width: 100%
    margin: 0px
    border-bottom: 1px solid gray
    li
      font-size: 1.4em
      border-left: 1px solid gray
      border-right: 1px solid gray
      border-top: 1px solid gray
      padding: 5px 10px 5px 10px
      &:hover
        background-color: gray
      &.autocomplete_item_last
        border-bottom: 1px solid gray
      a
        text-decoration: none
        color: black
        width: 100%
        height: 100%
        display: block
        span
          font-size: 16px
          font-style: italic
      &:first-child
        border-top: none
        font-size: 12px
