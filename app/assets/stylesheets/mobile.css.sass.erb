body
  margin: 0px
  width: 100%
  height: 100%
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

#map
  width: 100%
  height: 1000px

#park_detail
  width: 100%
  position: fixed
  bottom: -300px
  z-index: 1002
  border-top: 1px solid gray
  background-color: white
  #park_detail_main
    width: 100%
    height: 68px
    border-bottom: 1px solid gray
    #park_main_info
      cursor: pointer
      padding: 10px
      float: left
      display: inline
      p
        padding: 2px
        margin: 0px
      .park_detail_name
        font-weight: bold
        color: black
      .park_detail_addr
        font-size: 0.8em
    #share_button
      padding: 10px
      color: blue
      width: 50px
      border-left: 1px solid gray
      background-color: white
      background: url(<%= asset_path('abs__ic_menu_share_holo_light.png')%>) no-repeat center 5px
      height: 50px
      float: right

  #park_detail_other
    height: 200px
    .park_detail_item
      .park_detail_ico
        width: 50px
        padding-left: 5px
        background-color: white
        height: 50px
      .range
        background: url(<%= asset_path('abs__ic_menu_share_holo_light.png')%>) no-repeat center


#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  a
    float: left
    width: 33.3%
    height: 50px
    font-size: 11px
    text-align: center
    color: #808080

    span
      line-height: 10px
      display: inline-block
      padding-top: 30px
      width: 100%
      font-size: 11px

  .home span
    background: url(<%= asset_path('home.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order span
    background: url(<%= asset_path('order.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card span
    background: url(<%= asset_path('card.png')%>) no-repeat center 5px
    background-size: 25px 25px

  .home_press span
    background: url(<%= asset_path('home_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order_press span
    background: url(<%= asset_path('order_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card_press span
    background: url(<%= asset_path('card_press.png')%>) no-repeat center 5px
    background-size: 25px 25px


#search_place
  padding: 5px 10px 5px 10px
  border: 1px solid gray
  margin: 10px 10px 0px 10px
  border-radius: 2px

#search_input
  font-size: 1.4em
  width: 100%
  border: none
  outline: none
