body
  margin: 0px
  width: 100%
  height: 100%
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

#map
  width: 100%
  height: 1000px

#park_detail
  #park_detail_title
    width: 100%
    background-color: white
    position: fixed
    bottom: 50px
    z-index: 10000
    border-top: 1px solid black
    border-bottom: 1px solid black
    span.nav_button
      width: 64px
      border-left: 1px solid black
      float: right
      display: block
      line-height: 64px
  #park_detail_content

#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  a
    float: left
    width: 33.3%
    height: 50px
    font-size: 11px
    text-align: center
    color: #808080

    span
      line-height: 10px
      display: inline-block
      padding-top: 30px
      width: 100%
      font-size: 11px

  .home span
    background: url(<%= asset_path('home.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order span
    background: url(<%= asset_path('order.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card span
    background: url(<%= asset_path('card.png')%>) no-repeat center 5px
    background-size: 25px 25px

  .home_press span
    background: url(<%= asset_path('home_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order_press span
    background: url(<%= asset_path('order_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card_press span
    background: url(<%= asset_path('card_press.png')%>) no-repeat center 5px
    background-size: 25px 25px


#autocomplete
  padding: 10px 10px 0px 10px
  #search_place
    padding: 5px 10px 5px 10px
    border: 1px solid gray
    border-radius: 2px
    position: relative
    #search_input
      font-size: 1.4em
      width: 100%
      border: none
      outline: none
  #autocomplete_list
    padding: 5px 10px 5px 10px
    list-style: none
    padding: 0px
    width: 100%
    margin: 0px
    border-bottom: 1px solid gray
    li
      font-size: 1.4em
      border-left: 1px solid gray
      border-right: 1px solid gray
      border-top: 1px solid gray
      padding: 5px 10px 5px 10px
      &:hover
        background-color: gray
      &.autocomplete_item_last
        border-bottom: 1px solid gray
      a
        text-decoration: none
        color: black
        width: 100%
        height: 100%
        display: block
        span
          font-size: 16px
          font-style: italic
