body
  margin: 0px
.hidden
  display: none
.shown
  display: block

#map
  width: 100%
  position: relative
  #park_detail
    width: 100%
    position: absolute
    bottom: 0px
    opacity: 0.6
    z-index: 1000
    border-top: 1px solid black
    background-color: white
    #park_detail_main
      width: 100%
      padding: 10px 10px
      #park_main_info
        display: inline
        p
          padding: 2px
          margin: 0px
        .park_detail_name
          font-weight: bold
          color: black
        .park_detail_addr
          font-size: 0.8em
      #share_button
        width: 50px
        border-left: 1px solid black
        float: right


#tabs
  width: 100%
  a
    float: left
    width: 33.3%
    height: 50
    font-size: 11px
    text-align: center
    color: #808080

    span
      line-height: 10px
      display: inline-block
      padding-top: 30px
      width: 100%
      font-size: 11px

  .home span
    background: url(<%= asset_path('home.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order span
    background: url(<%= asset_path('order.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card span
    background: url(<%= asset_path('card.png')%>) no-repeat center 5px
    background-size: 25px 25px

  .home_press span
    background: url(<%= asset_path('home_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .order_press span
    background: url(<%= asset_path('order_press.png')%>) no-repeat center 5px
    background-size: 25px 25px
  .card_press span
    background: url(<%= asset_path('card_press.png')%>) no-repeat center 5px
    background-size: 25px 25px

