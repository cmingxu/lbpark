@importa "normalize"

$border-color: #ccc
$font-color: #3c3c40
$font-color-blue: #3c3c40
$light-gray: #c0c0c0
$dark-gray: #454545
$blue: #1aa8fc
$orange: #ff9b26
$red: #f82c2d
$green: #8bcf0a

$tab-bg-color: #f6f6f6
$park-detail-bg-color: #fcfcfc

$weight-normal: 400
$weight-bold: 700
$weight-extra-bold: 900

$font-size-normal: 1em
$font-size-small: .8em
$font-size-extra-small: .6em
$font-size-big: 1.2em
$font-size-bigger: 1.4em
$font-size-extra-big: 1.4em

$border-highlight-color-1: #f88db9
$border-highlight-color-2: #72bbe8
$border-highlight-color-3: #f8b064
$border-highlight-color-4: #71d398
$border-highlight-color-5: #ff7a7b
$border-highlight-width: 3px

$border-highlight-color-1: #fff
$border-highlight-color-2: #fff
$border-highlight-color-3: #fff
$border-highlight-color-4: #fff
$border-highlight-color-5: #fff



// coupon defines
$user-background-color: #efefef
$user_coupon_tab_border_color: #61a7f9
$user_coupon_free_item_highlight_color: #e48030
$user_coupon_long_term_item_highlight_color: #a1ce33
$user_coupon_expired_item_highlight_color: #c2c2c2
$user_coupon_tpl_show_click_area_bg: #bebebe
$user_coupon_tpl_show_click_area_bg_active: #e4841f
$user_coupon_tpl_show_click_area_bg_active_long_term: #a1ce33

// global
$user-mine-heading-background-color: #1aa8fc

// tabs
$tab-font-color: $font-color
$tab-font-color-highlight: $font-color-blue

// park short & park detail
$park_padding_left: 10px

@mixin block_vertical_align()
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)
  -ms-transform: translateY(-50%)
  transform: translateY(-50%)



body
  -webkit-font-smoothing: antialiased
  margin: 0px
  width: 100%
  height: 100%
  background-color: $user-background-color
  color: $font-color

// helpers
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

.blank50
  display: block
  height: 50px
.pull-right
  float: right
.pull-left
  float: left

.warning_message
  border: 1px solid gray
  padding: 5px
  margin: 0px auto
  width: 70%
  margin-top: 40px
  background-color: #eef4fd

@keyframes rotatingAnim
  from
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

#list_place_holder
  width: 100px
  height: 100px
  margin: 0px auto
  margin-top: 100px
  background-image: url('<%= asset_path("list_place_holder.png") %>')
  animation-name: rotatingAnim
  animation-duration: 3s
  animation-iteration-count: infinite

.rotating
  animation-name: rotatingAnim
  animation-duration: 1s
  animation-iteration-count: infinite
  animation-timing-function: linear


@keyframes alertShow
  from
    top: -44px
    display: block
  20%, 80%
    top: 0px
  100%
    top: -44px
    display: none


#toast
  height: 44px
  line-height: 44px
  width: 100%
  position: fixed
  background-color: #cf831c
  color: black
  text-align: center
  font-weight: 800
  font-size: 1.2em
  border-bottom-left-radius: 3px
  border-bottom-right-radius: 3px
  animation-name: alertShow
  animation-duration: 3s
  animation-direction: alternate
  animation-timing-function: ease-in

a[title="站长统计"]
  display: none
