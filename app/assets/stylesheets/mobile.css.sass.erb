$border-color: #ccc
$border-highlight-color-1: #f88db9
$border-highlight-color-2: #72bbe8
$border-highlight-color-3: #f8b064
$border-highlight-color-4: #71d398
$border-highlight-color-5: #ff7a7b
$border-highlight-width: 3px

$border-highlight-color-1: #fff
$border-highlight-color-2: #fff
$border-highlight-color-3: #fff
$border-highlight-color-4: #fff
$border-highlight-color-5: #fff

body
  -webkit-font-smoothing: antialiased
  margin: 0px
  width: 100%
  height: 100%

// helpers 
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

.blank50
  display: block
  height: 50px

.warning_message
  border: 1px solid gray
  padding: 5px
  margin: 0px auto
  width: 70%
  margin-top: 40px
  background-color: #eef4fd

///////////////////////

#map
  width: 100%
  height: 1000px
  .lb_marker
    background-image: url('<%= asset_path("park_water_drop.png") %>')
    background-size: 336px auto
    background-repeat: no-repeat
    height: 48px
    width: 32px
    color: white
    padding-top: 10px
    font-size: 18px
    text-align: center
    position: relative
    .zero_notion
      font-size: 12px
    .rmb_mark
      position: fixed
      font-size: 10px
      left: 2px
      top: 5px
  .lb_marker_a
  .lb_marker_b
  .lb_marker_c
  .marker_orange
    background-position-x: 0px
  .marker_green
    background-position-x: -48px
  .marker_blue
    background-position-x: -96px
  .marker_red
    background-position-x: -144px
  .marker_gray
    background-position-x: -192px
  .marker_c
    background-position-x: -240px
  .marker_b
    background-position-x: -288px
  .marker_pressed
    margin-left: 5px
    margin-top: 5px
  #back_to_original_marker
    height: 50px
    width: 50px
    background-image: url('<%= asset_path("user_index_position.png") %>')
    background-position-x: 0px
    background-size: 100px auto
    position: fixed
    right: 20px
    top: 20px
    z-index: 1000
    
  #center_marker
    width: 50px
    height: 50px
    margin-left: -25px
    margin-top: -25px
    background-image: url('<%= asset_path("user_index_position.png") %>')
    background-position-x: -50px
    background-size: 100px auto

#park
  #park_title
    <%#transition: height 0.1s%>
    <%#-webkit-transition: all 0.1s%>
  #park_detail
    <%#transition: height 0.1s%>
    <%#-webkit-transition: all 0.1s%>

  #park_title
    width: 100%
    background-color: white
    position: fixed
    z-index: 10000
    border-top: 1px solid $border-color
    border-bottom: 1px solid $border-color
    border-left: $border-highlight-width solid $border-highlight-color-1
    span.desc
      float: left
      padding-top: 14px
      padding-left: 10px
      #park_status
        background-color: green
        color: white
        font-size: 12px
        display: inline-block
        padding: 12px
        padding-bottom: 2px
        padding-top: 2px
        position: absolute
        transform: translate(-26px, -14px) rotate(-45deg)
      #park_name
        font-size: 18px
        font-weight: bold
        color: #666
      #park_short_description
        font-size: 12px
      #park_position
        font-size: 10px
        background-color: #aaa
        color: white
        padding: 2px
        border-radius: 2px
    span.nav_button
      width: 64px
      height: 64px
      border-left: 1px solid $border-color
      float: right
      text-align: center
      .nav_button_icon
        background-image: url('<%= asset_path("user_index.png") %>')
        background-repeat: no-repeat
        background-size: 600px auto
        background-position: 0px
        height: 50px
        width: 50px
        margin-left: 8px
      .nav_button_text
        font-size: 12px
        color: #3f74d8
        margin-top: -20px

  #park_detail
    width: 100%
    background-color: white
    border-top: 1px solid $border-color
    border-bottom: 1px solid $border-color
    z-index: 10000
    position: fixed
    .row
      border-top: 1px solid $border-color
      &:first-child
        height: 150px
        border-top: none
        .park_preview
          position: fixed
          right: 0px
          bottom: 211px

        .day_and_night_prices
          margin-right: 177px
          .day
            height: 75px
            border-left: $border-highlight-width solid $border-highlight-color-2
          .night
            height: 75px
            border-top: 1px solid $border-color
            border-left: $border-highlight-width solid $border-highlight-color-3
          img
            width: 35%
            height: 75px
            float: left
          .price_detail
            float: right
            height: 75px
            width: 65%
            .price_and_unit
              padding-top: 10px
              color: blue
              .price
                font-size: 14px
              .unit
                font-size: 10px
            .time_span
              font-size: 10px
          span.day_icon
            float: left
            height: 50px
            margin-top: 12px
            width: 50px
            background-image: url(<%= asset_path("user_index.png") %>)
            background-size: 600px
            background-position-x: -50px
            background-repeat: no-repeat
            display: block
          span.night_icon
            float: left
            height: 50px
            margin-top: 12px
            width: 50px
            background-image: url(<%= asset_path("user_index.png") %>)
            background-size: 600px auto
            background-position-x: -100px
            background-repeat: no-repeat
            display: block
      &:nth-child(2)
        height: 75px
        padding-left: 10px
        word-wrap: break-word
        word-break: normal
        border-left: $border-highlight-width solid $border-highlight-color-4
      &:nth-child(3)
        height: 75px
        padding-top: 10px
        border-left: $border-highlight-width solid $border-highlight-color-5
      span.feature
        border: 1px solid #cbcbcb
        padding: 5px
        margin-right: 10px
        margin-top: 10px
        font-size: 12px
        display: inline-block
      .lb_notice
        height: 75px
        width: 50px
        float: left
        text-align: right
        background-image: url('<%= asset_path("user_index.png") %>')
        background-size: 600px auto
        background-position-x: -200px
        background-repeat: no-repeat
      #tips
        font-size: 14px
        float: left
        padding-left: 20px

#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  background-color: #f9f9f9
  a
    width: 33.3%
    height: 64px
    line-height: 50px
    width: 33.3%
    display: block
    float: left
    font-size: 12px
    text-decoration: none
    color: white
    span
      width: 48px
      height: 100%
      display: block
      margin: 0px auto
      background-image: url(<%= asset_path('user_index.png')%>)
      background-size: 600px auto
      background-repeat: no-repeat
      text-align: center
      padding-top: 24px
      color: #828282
    span.map
      background-position-x: -350px
    span.search
      background-position-x: -450px
    span.mine
      background-position-x: -550px
    span.map_press
      background-position-x: -300px
      color: #598dd7
    span.search_press
      background-position-x: -400px
      color: #598dd7
    span.mine_press
      background-position-x: -500px
      color: #598dd7
    span.report
      background-image: url(<%= asset_path('vendor_tab_icon.png')%>)
      background-size: 300px auto
      background-position-x: -50px
    span.report_press
      background-image: url(<%= asset_path('vendor_tab_icon.png')%>)
      background-size: 300px auto
      background-position-x: 0px
      color: #598dd7
    span.lottery
      background-image: url(<%= asset_path('vendor_tab_icon.png')%>)
      background-size: 300px auto
      background-position-x: -150px
    span.lottery_press
      background-image: url(<%= asset_path('vendor_tab_icon.png')%>)
      background-size: 300px auto
      background-position-x: -100px
      color: #598dd7




#autocomplete
  padding: 10px 10px 0px 10px
  #search_place
    padding: 5px 10px 5px 10px
    border: 1px solid gray
    border-radius: 2px
    position: relative
    #search_input
      font-size: 1.4em
      width: 100%
      border: none
      outline: none
  #autocomplete_list
    padding: 5px 10px 5px 10px
    list-style: none
    padding: 0px
    width: 100%
    margin: 0px
    border-bottom: 1px solid gray
    li
      font-size: 1.4em
      border-left: 1px solid gray
      border-right: 1px solid gray
      border-top: 1px solid gray
      padding: 5px 10px 5px 10px
      &:hover
        background-color: gray
      &.autocomplete_item_last
        border-bottom: 1px solid gray
      a
        text-decoration: none
        color: black
        width: 100%
        height: 100%
        display: block
        span
          font-size: 16px
          font-style: italic
      &:first-child
        border-top: none
        font-size: 12px
.user_mine
  padding-top: 5px
  #feedback_content, #feedback_contact, #feedback_submit_btn
    width: 90%
    margin-left: 5%

  #feedback_submit_btn
    background-color: #568bd9
    border-color: #568bd9
    color: white
    font-weight: bold
    padding-top: 5px
    padding-bottom: 5px
    margin-top: 20px
  #feedback_content
    height: 200px


.vendor
  *
    transition: 0.2s
  .vender_index
    height: 100%
    #park_status_detail
      height: 33%
      width: 100%
      background-image: url('<%= asset_path("vendor_index_info_bg.png") %>')
      #park_status_detail_name
        height: 50%
        position: relative
        #park_status_detail_name_content
          position: absolute
          padding-left: 38px
          font-size: 20px
          bottom: 25px
          &:before
            height: 18px
            width: 18px
            position: absolute
            margin-left: -18px
            margin-top: 4px
            background-image: url('<%= asset_path("vendor_index_icon.png") %>')
            background-position: 0 0
            content: ''
      #park_status_detail_info
        border-top: 1px solid white
        height: 50%
        line-height: 18px
        font-size: 14px
        padding-top: 20px
        span
          display: inline-block
          padding-left: 20px
          .park_status_detail_info_status_icon
            height: 18px
            width: 18px
            float: left
            background-image: url('<%= asset_path("vendor_index_icon.png") %>')
            background-position: -18px 0
            content: ''
          .park_status_detail_info_status
            float: right
            padding-left: 5px

          .park_status_detail_info_last_input_time_icon
            height: 18px
            width: 18px
            float: left
            background-image: url('<%= asset_path("vendor_index_icon.png") %>')
            background-position: -36px 0
            content: ''
          .park_status_detail_info_last_input_time
            float: right
            padding-left: 5px

          .park_status_detail_info_phone_icon
            height: 18px
            width: 18px
            float: left
            background-image: url('<%= asset_path("vendor_index_icon.png") %>')
            background-position: -54px 0
            content: ''
          .park_status_detail_info_phone
            float: right
            padding-left: 5px
    #park_status_buttons
      height: 33%
      width: 100%
      background-color: white
      span
        width: 32%
        display: inline-block
        height: 100%
        text-align: center
        font-weight: bold
        text-shadow: 1px 1px 1px white
        .green
          background-color: #71d398
          height: 80px
          width: 80px
          border-radius: 80px
          margin: 0px auto
          margin-top: 40px
        .orange
          background-color: #f8b064
          height: 80px
          width: 80px
          border-radius: 80px
          margin: 0px auto
        .red
          background-color: #d75a5a
          height: 80px
          width: 80px
          border-radius: 80px
          margin: 0px auto

        a
          color: white
          text-decoration: none
          display: block
          padding-top: 35%
          font-size: 18px

          &:active
            background-color: white

    #park_status_news
      height: 33%
      background-color: white
      width: 100%
      .park_status_header
        background-color: #e2e2e2
        color: white
        padding-top: 5px
        padding-left: 20px
        padding-bottom: 5px
      ul
        list-style: none
        li
          a
            display: inline-block
            padding-top: 3px
            text-decoration: none
            border-bottom: 1px solid #ccc
            color: #666

  .popup
    position: fixed
    height: 100%
    width: 100%
    top: 0px
    left: 0px
    background-color: black
    opacity: 0.7
  #confirm_box
    transition: all 2s
    position: fixed
    width: 70%
    margin-left: 15%
    margin-right: 15%
    left: 0px
    top: 200px
    background-color: white
    height: 150px
    border-radius: 5px
    box-shadow: 0 5px 15px rgba(0,0,0,.5)
    #confirm_message
      height: 70%
      span
        margin-top: 30px
        margin-left: 30px
        display: inline-block
    #confirm_buttons
      height: 30%
      border-top: 1px solid #666
      #confirm_yes_button
        background-color: #6084e5
        color: white
        border-bottom-right-radius: 5px
        cursor: pointer
      #confirm_no_button
        color: #333
        cursor: pointer
      .btn
        width: 50%
        height: 99%
        float: left
        text-align: center
        font-size: 18px
        font-weight: bold
        span
          margin-top: 8px
          display: inline-block


  .vendor_login_page
    height: 100%
    width: 100%
    font-size: 18px
    input
      border: none
      height: 32px
      line-height: normal
      font-size: 20px
      border: 1px solid #ccc
      padding-left: 10px


    #mobile_num_field
      width: 100%
    #sms_code_field
      width: 150px

    .vendor_login_form
      width: 90%
      margin: auto
      margin-top: 20px
      .box
        margin-top: 20px

    #send_btn
      display: inline-block
      border: 1px solid #ccc
      padding: 7px 10px
      float: right
      cursor: pointer
    #login_btn
      border: none
      background-color: #6084e5
      color: white
      font-size: 18px
      font-weight: bold
      text-align: center
      padding-top: 7px
      padding-bottom: 5px
      cursor: pointer
      width: 100%
    #error_message_box
      color: red
      width: 90%
      margin: auto
      margin-top: 10px
  .vendor_lottery
    margin-top: 20px
    &:first-child
      border-top: 1px solid #d9d9d9
    .lottery
      border-bottom: 1px solid #d9d9d9
      padding-top: 10px
      padding-bottom: 10px
      .lottery_info
        margin-top: 10px
        padding-left: 10%
        width: 50%
        float: left
        .open_num
          font-size: 16px
          font-weight: bold
      .lottery_status
        width: 40%
        float: left
        .lottery_status_bg
          height: 20px
          width: 20px
          padding: 20px
          border-radius: 50%
          span
            display: inline-block
            width: 40px
            margin-left: -7px
            margin-top: -3px
            color: white

  .vendor_mine
    padding: 5px
    .vendor_info
      .vendor_profile
        float: left
      .vendor_info_detail
        padding-left: 110px
        .vendor_info_park_name
          font-size: 18px
          font-weight: bold
          padding-bottom: 10px
        .vendor_info_phone
          font-style: italic


    .vendor_action_list
      &:first-child
        border-top: 1px solid #9d9d9d

      .vendor_action_item
        text-align: center
        border-bottom: 1px solid #9d9d9d
        padding-top: 10px
        padding-bottom: 10px
        a
          text-decoration: none
          color: inherit


