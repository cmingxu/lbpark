@keyframes alertShow
  from
    top: -44px
    display: block
  20%, 80%
    top: 0px
  100%
    top: -44px
    display: none

#toast
  height: 44px
  line-height: 44px
  width: 100%
  position: fixed
  background-color: #cf831c
  color: black
  text-align: center
  font-weight: 800
  font-size: 1.2em
  border-bottom-left-radius: 3px
  border-bottom-right-radius: 3px
  animation-name: alertShow
  animation-duration: 3s
  animation-direction: alternate
  animation-timing-function: ease-in

