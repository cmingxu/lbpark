body
  margin: 0px
  width: 100%
  height: 100%
.hidden
  display: none
.shown
  display: block

.clearfix
  clear: both

#map
  width: 100%
  height: 1000px
  .lb_marker
    background-image: url('park_water_drop.png')
    background-repeat: repeat-x
    height: 48px
    width: 32px
    color: white
    padding-top: 10px
    font-size: 20px
    text-align: center
    position: relative
    .rmb_mark
      position: fixed
      font-size: 10px
      left: 2px
      top: 5px
  .marker_orange
    background-position-x: 0px
  .marker_red
    background-position-x: 32px
  .marker_blue
    background-position-x: 65px
  .marker_green
    background-position-x: 98px

#park
  #park_title
    width: 100%
    background-color: white
    position: fixed
    z-index: 10000
    border-top: 1px solid black
    border-bottom: 1px solid black
    span.desc
      float: left
      padding-top: 14px
      padding-left: 10px
      #park_name
        font-size: 18px
        font-weight: bold
      #park_short_description
        font-size: 12px
    span.nav_button
      width: 64px
      border-left: 1px solid black
      float: right
      display: block
  #park_detail
    width: 100%
    background-color: white
    border-top: 1px solid black
    border-bottom: 1px solid black
    z-index: 10000
    position: fixed
    .row
      height: 100px
      border-top: 1px solid black
      &:first-child
        border-top: none
        .park_preview
          float: left
          width: 50%
        .day_and_night_prices
          float: right
          width: 50%
          .day
            height: 50px
          .night
            background-color: #e4e4e4
            height: 50px
          img
            width: 35%
            height: 50px
            float: left
          .price_detail
            float: right
            height: 50px
            width: 65%
            .price_and_unit
              padding-top: 10px
              color: blue
              .price
                font-size: 14px
              .unit
                font-size: 10px
            .time_span
              font-size: 10px
      &:nth-child(2)
        padding-top: 10px
        padding-left: 10px
        word-wrap: break-word
        word-break: normal
        
      &:nth-child(3)
        padding-top: 10px
        padding-left: 10px
        background-color: #e4e4e4
      span.feature
        border: 1px solid gray
        padding: 5px
        margin-right: 10px
        font-size: 12px
      .lb_notice
        width: 30%
        float: left
        text-align: right
      #tips
        float: right
        width: 70%

#tabs
  bottom: 0px
  width: 100%
  z-index: 10040
  position: fixed
  background-color: #4d88e6
  a
    width: 33.3%
    height: 50px
    line-height: 50px
    width: 33.3%
    display: block
    float: left
    font-size: 12px
    text-decoration: none
    color: white
    span
      width: 48px
      height: 100%
      display: block
      margin: 0px auto
      background-image: url(<%= asset_path('tab_icons.png')%>)
      background-repeat: no-repeat
      text-align: center
      padding-top: 16px
    span.map
      background-position-x: 0px
    span.search
      background-position-x: -48px
    span.mine
      background-position-x: -96px
    span.map_press
      background-position-x: 0px
      opacity: 0.48
    span.search_press
      opacity: 0.48
      background-position-x: -48px
    span.mine_press
      background-position-x: -96px
      opacity: 0.48



#autocomplete
  padding: 10px 10px 0px 10px
  #search_place
    padding: 5px 10px 5px 10px
    border: 1px solid gray
    border-radius: 2px
    position: relative
    #search_input
      font-size: 1.4em
      width: 100%
      border: none
      outline: none
  #autocomplete_list
    padding: 5px 10px 5px 10px
    list-style: none
    padding: 0px
    width: 100%
    margin: 0px
    border-bottom: 1px solid gray
    li
      font-size: 1.4em
      border-left: 1px solid gray
      border-right: 1px solid gray
      border-top: 1px solid gray
      padding: 5px 10px 5px 10px
      &:hover
        background-color: gray
      &.autocomplete_item_last
        border-bottom: 1px solid gray
      a
        text-decoration: none
        color: black
        width: 100%
        height: 100%
        display: block
        span
          font-size: 16px
          font-style: italic
      &:first-child
        border-top: none
