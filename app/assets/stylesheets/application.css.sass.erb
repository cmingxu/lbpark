@import "bootstrap_custom"
@import "bootstrap-sprockets"
@import "bootstrap"


@font-face
  font-family: 'fontawesome-webfont'
  src: url(/assets/fontawesome-webfont.eot)
  src: url(/assets/fontawesome-webfont.eot?#iefix) format("embedded-opentype"), url(/assets/fontawesome-webfont.ttf) format("truetype"), url(/assets/fontawesome-webfont.woff) format("woff"), url(/assets/fontawesome-webfont.svg#fontawesome-webfont) format("svg")
  font-weight: normal
  font-style: normal

#captcha
  color: blue
  text-decoration: underline
  cursor: pointer

.register_form
  .logo
    position: absolute
    background-image: url('<%= asset_path("logo_png.png") %>')
    background-size: 100px auto
    height: 100px 
    width: 100px
    right: -50px
    top: -50px
    z-index: -2px

  margin-top: 100px
  .form-group:nth-of-type(1)
    padding-top: 20px
  .form-group
    margin-top: 0px
    margin-bottom: 0px
    padding-bottom: 20px
  .form
    z-index: 10px
    padding: 20px
    background-color: lighten(green, 15%)
    color: white
    border-radius: 8px
    font-weight: 700
    box-shadow: 4px 4px 3px green
    text-shadow: 1px 1px 1px black
    .help-block
      color: white

.welcome
  width: 1140px
  margin: 0px auto
  background-color: white
  min-height: 1000px

.heatmap
  #lb_heatmap
    width: 100%
    height: 100%
    min-height: 700px
