@import "client"

$bg-main-color: white
$font-main-color: black
$bg-gray-color: #f6f6f6
$bg-dark-gray: #cdcdcd

#container
  width: 100%
  background-color: $bg-gray-color

  .ruler
    height: 20px
    background-color: white
    border-bottom: 1px solid $bg-dark-gray
    .small_interval_mark,.big_interval_mark
      float: left
      border-left: 1px solid $bg-dark-gray
      height: 10px
      width: 10px
    .big_interval_mark
      height: 20px
  #pm_container_canvas_y_ruler
    transform: rotate(-90deg) translateX(-100%)
    transform-origin: left top

  .pm_content
  .pm_header
    margin-bottom: 5px
  #pm_toolbar
    height: 64px
    padding: 10px
    border: 1px solid $bg-dark-gray
    #pm_toolbar_content
      .toolbaritem
        float: left
        width: 44px
        text-align: center
        color: $bg-dark-gray
        cursor: pointer
        .toolbaritem_icon
          height: 32px
          width: 32px
          background-image: url('<%= image_path("logo_png.png") %>')
          background-size: 32px 32px
        .toolbaritem_name
  #pm_content
    width: 100%
    padding-left: 200px
    position: relative
    min-height: 600px
    overflow: scroll
  #pm_project_window
    padding: 10px
    width: 200px
    border: 1px solid $bg-dark-gray
    position: absolute
    left: 0px
    min-height: 600px
  #pm_container_canvas_wrapper
    box-sizing: border-box
    width: 3000px
    height: 3000px
    overflow: scroll
    border: 1px solid $bg-dark-gray

    #pm_container_canvas
      width: 100%
      margin-left: 20px
      margin-top: -20px
      background-color: $bg-main-color
      height: 100%

  #pm_ele_editor
    width: 200px
    position: absolute
    top: 0px
    right: 0px
    border: 1px solid $bg-gray-color
