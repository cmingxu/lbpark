@import "bootstrap_custom"
@import "bootstrap-sprockets"
@import "bootstrap"
@import "datepicker3"
@import "font-awesome"


// client settings
$client-bg-color: #ececf3
$client-sidebar-bg-color: #303842
$client-sidebar-active-item-bg-color: #3a424c
$client-font-color-dark: #303842

$bg-main-color: white
$bg-gray-color: #f6f6f6
$bg-dark-gray: #cdcdcd
$bg-light-gray: #f5f5f5


.container-fluid
  padding: 0px!important


.lb_table
  tr
    td
      &:first-child
        text-align: right
        padding-right: 20px
      &:nth-child(2)
        text-align: left
.link
  @extend .btn
  @extend .btn-primary
#by_day
  width: 100%
.lb_form
  padding-top: 20px
  padding-bottom: 20px

.lb_client
  .sidebar
    background-color: $client-sidebar-bg-color
    .client_brand
      background-color: $client-sidebar-active-item-bg-color
      color: white
      font-weight: $font-weight-bold
      font-size: $font-size-big
      height: 44px
      line-height: 44px
      margin-top: -10px
      text-align: center
      img
        height: 32px
        width: 32px
    .list-group
      margin-top: 10px

  .nav-container
    height: 44px
    line-height: 44px
    background-color: white
    .client-name
      padding-left: 20px
      font-weight: $font-weight-bold
      font-size: $font-size-big
    ul.nav.navbar-nav
      li
        a
          color: $client-font-color-dark
          height: 44px
          line-height: 44px
          i, span
            color: red


  .page-wraper
    color: $client-font-color-dark
    .client_dashboard
      .client_metrics
        .metric
          width: 250px
          height: 300px
          background-color: white
          margin-right: 10px
          float: left
          text-align: center

          .metric_icon
          .metric_desc
          .metric_data

          i
            @include block_vertical_align
    .setup_page
      .setup_nav
        list-style: none
        -webkit-padding-start: 0px
        display: block
        li
          float: left
          display: inline-block
          padding: 5px 20px
          border: 1px solid $bg-dark-gray
          color: $bg-dark-gray
          margin-right: 10px
          background-color: $bg-light-gray
          border-radius: 4px
          span
            font-weight: 900
            font-size: 2em
        .active
          background-color: #7eb762
          border: 1px solid #7eb762
          box-shadow: 3px 3px 2px lighten(black, 30%)
          color: white

      form
        padding: 10px 0px
        input[type=text]
          width: 400px
          padding-left: 10px
          height: 35px
          line-height: 35px
          font-weight: 700
          font-size: 1.4em
          display: block
          margin: 10px 0px
        .btn
          margin-right: 10px
#overlay
  position: absolute
  width: 100%
  height: 100%
  background-color: rgba(black, .7)
  display: none
  #overlay_container
    width: 800px
    height: 400px
    margin: 0px auto
    padding: 10px
    box-shadow: 10px 10px 10px rgba(black, 0.9)
    @include block_vertical_align
    border-radius: 5px
    overflow: scroll
    background-color: $bg-light-gray
